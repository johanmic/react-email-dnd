{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@react-email-dnd/shared": ["../shared/src/index.ts"],
      "@react-email-dnd/shared/*": ["../shared/src/*"],
      "@react-email-dnd/renderer": ["../renderer/src/index.ts"],
      "@react-email-dnd/renderer/*": ["../renderer/src/*"]
    },
    "types": ["react", "react-dom", "vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx", "tsup.config.ts", "vitest.config.ts"],
  "exclude": ["dist", "node_modules"]
}
