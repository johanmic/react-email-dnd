{
  "author": "Johan Mickelin",
  "name": "@react-email-dnd",
  "packageManager": "pnpm@9",
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter react-email-dnd-docs dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "release": "changeset version && pnpm -r build && changeset publish",
    "docs": "pnpm --filter react-email-dnd-docs start",
    "docs:build": "pnpm --filter react-email-dnd-docs build",
    "docs:serve": "pnpm --filter react-email-dnd-docs serve"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
